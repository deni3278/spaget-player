<SplitPane dividerPositions="0.75" minHeight="606.0" minWidth="606.0" prefHeight="768.0" prefWidth="1024.0" stylesheets="@../resources/stylesheet.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="player.Player">
   <items>
      <BorderPane minWidth="350.0">
         <center>
            <StackPane fx:id="mediaViewPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" BorderPane.alignment="CENTER">
               <children>
                  <MediaView fx:id="mediaView" fitHeight="${mediaViewPane.height}" fitWidth="${mediaViewPane.width}" StackPane.alignment="CENTER" />
               </children>
            </StackPane>
         </center>
         <bottom>
            <GridPane style="-fx-background-color: #222222;" BorderPane.alignment="CENTER">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints prefHeight="50.0" valignment="CENTER" vgrow="ALWAYS" />
                  <RowConstraints prefHeight="50.0" valignment="CENTER" vgrow="ALWAYS" />
               </rowConstraints>
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Label fx:id="labelCurrentTime" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="75.0" text="00:00:00" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="11.0" />
                           </font>
                        </Label>
                        <Slider fx:id="sliderSeek" disable="true" maxHeight="-Infinity" minHeight="-Infinity" onMouseClicked="#handleSeek" onMousePressed="#handleSeek" HBox.hgrow="ALWAYS" />
                        <Label fx:id="labelTotalDuration" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="75.0" text="00:00:00" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="11.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" GridPane.rowIndex="1">
                     <children>
                        <GridPane fx:id="paneControlsGrid">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="50.0" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="50.0" />
                              <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="50.0" />
                              <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="50.0" />
                              <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Button fx:id="btnPlay" defaultButton="true" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: transparent;">
                                 <graphic>
                                    <FontAwesomeIconView fx:id="iconBtnPlay" fill="WHITE" glyphName="PLAY" size="20" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnStepBack" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: transparent;" GridPane.columnIndex="1">
                                 <graphic>
                                    <FontAwesomeIconView fill="WHITE" glyphName="STEP_BACKWARD" size="20" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnStop" cancelButton="true" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: transparent;" GridPane.columnIndex="2">
                                 <graphic>
                                    <FontAwesomeIconView fill="WHITE" glyphName="STOP" size="20" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnStepForward" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: transparent;" GridPane.columnIndex="3">
                                 <graphic>
                                    <FontAwesomeIconView fill="WHITE" glyphName="STEP_FORWARD" size="20" />
                                 </graphic>
                              </Button>
                              <Slider fx:id="sliderVolume" disable="true" showTickLabels="true" showTickMarks="true" GridPane.columnIndex="4">
                                 <padding>
                                    <Insets left="5.0" right="5.0" />
                                 </padding>
                              </Slider>
                           </children>
                        </GridPane>
                     </children>
                  </HBox>
               </children>
            </GridPane>
         </bottom>
      </BorderPane>
      <TabPane fx:id="paneTab" minWidth="256.0" tabClosingPolicy="UNAVAILABLE" SplitPane.resizableWithParent="false">
         <tabs>
            <Tab text="Library">
               <content>
                  <TableView fx:id="viewTableMedia" onMouseClicked="#handleTableClick">
                     <columns>
                        <TableColumn fx:id="columnTitle" editable="false" maxWidth="1.7976931348623157E308" minWidth="96.0" prefWidth="-1.0" text="Title" />
                        <TableColumn fx:id="columnArtist" editable="false" maxWidth="1.7976931348623157E308" minWidth="96.0" prefWidth="-1.0" text="Artist" />
                        <TableColumn fx:id="columnDuration" editable="false" maxWidth="1.7976931348623157E308" minWidth="64.0" prefWidth="-1.0">
                           <graphic>
                              <MaterialDesignIconView glyphName="CLOCK" size="16" text="ï‰†" />
                           </graphic></TableColumn>
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <contextMenu>
                        <ContextMenu>
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#updateMediaTable" text="Refresh" />
                          </items>
                        </ContextMenu>
                     </contextMenu>
                  </TableView>
               </content></Tab>
            <Tab text="Playlists">
               <content>
                  <ListView prefHeight="200.0" prefWidth="200.0" />
               </content></Tab>
         </tabs>
      </TabPane>
   </items>
</SplitPane>
